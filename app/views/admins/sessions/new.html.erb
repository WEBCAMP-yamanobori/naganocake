<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="form-group">
      <h4 class="mt-3 mb-3 bg-light">管理者ログイン</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
          <label>メールアドレス</label>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 65, placeholder: "sample@example.com" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
          <label>パスワード</label>
        </div>
        <div class="col-sm-6 mb-3">
          <%= f.password_field :password, autocomplete: "current-password", size: 65 %>
        </div>
      </div>
    </div>

    <!--< if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    <= f.check_box :remember_me %>-->
    <!--    <= f.label :remember_me %>-->
    <!--  </div>-->
    <!--< end %>-->

    <div class="form-group">
      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-2">
          <div class="bottom_login">
            <%= f.submit "ログイン", class:"mb-4 btn btn-primary btn-block" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>