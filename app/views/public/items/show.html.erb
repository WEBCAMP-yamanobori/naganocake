<div>
  <%= attachment_image_tag @item, :image, :fill, 250, 250, fallback: "22047646_s.jpg", size: "250x250" %>
</div>

<div>
  <p><%= @item.name %></p>
  <p><%= @item.introduction %></p>
  <p>￥<%= @item.add_tax_non_taxed_price.to_s(:delimited) %>(税込)</p>
</div>

<div>
  <%= form_with model: @cart_item, local:true do |f| %>
    <% if customer_signed_in? %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <% end %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.select :quantity, (1..10).map { |i| [i, i]}, include_blank: "個数選択" %>
    <%= f.submit "カートに入れる", class: "btn btn-success" %>
  <% end %>
</div>

<table class="table table-bordered" style="width: 12rem;">
  <thead>
    <tr>
      <td>ジャンル検索</td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
