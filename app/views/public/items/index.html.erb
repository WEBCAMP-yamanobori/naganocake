<strong>商品一覧</strong>
<div>(全<%= Item.count %>件)</div>
<div>
  <% @items.each do |item| %>
    <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "22047646_s.jpg", size: "100x100" %>
      <%= link_to item_path(item.id) do %>
        <p><%= item.name %></p>
      <% end %>
    <p>￥<%= item.add_tax_non_taxed_price.to_s(:delimited) %></p>
  <% end %>
</div>

<table class="table table-bordered" style="width: 12rem;">
  <thead>
    <tr>
      <td>ジャンル検索</td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
