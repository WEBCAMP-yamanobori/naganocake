<div class="d-flex flex-wrap">
  <% items.each do |item| %>
  <div class="flex-item">
    <div class="card　border-0">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 170, 100, fallback: "22047646_s.jpg", size: "170x100" %>
        <p class="card-title">
          <%= item.name %>
        </p>
      <% end %>
      <p class="card-text">
        ￥<%= item.add_tax_non_taxed_price.to_s(:delimited) %>
      </p>
    </div>
  </div>
  <% end %>
</div>