<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="form-group">
      <h4 class="mt-3 bg-light">配送先編集</h4>
    </div>
  </div>
<!-- form_with部分 -->
  <%= form_with model: @address, local:true do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>郵便番号(ハイフンなし)</label>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :postcode , class:"form-control address_postcode", placeholder: "0000000" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>住所</label>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :address , class:"form-control address_address", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>宛名</label>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :name , class:"form-control address_name", placeholder: "令和道子" %>
        </div>
        <div class="col-sm-1"></div>
        <div>
          <%= f.submit '変更を保存', class:'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>