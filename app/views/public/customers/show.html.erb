  <div class = "container">
    <div class = "row">
       <div class="col-sm-1"></div>
        <h4 class="mt-3 mb-3 bg-light">マイページ</h4>
    </div>

    <div class = "row">
      <h3>登録情報</h3>
      <div class="col-sm-1"></div>
      <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
    </div>

    <div class = "row">
      <div class = "col-sm-10 ">
        <table class = "table table-bordered">
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class = "row">
      <h4>　配送先</h4>
      <div class="col-sm-1"></div>
      <%= link_to "一覧を見る", customers_addresses_path, class: "btn btn-primary" %>
    </div>

    <div class = "row">
      <h4>注文履歴</h4>
      <div class="col-sm-1"></div>
      <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
    </div>
</div>


