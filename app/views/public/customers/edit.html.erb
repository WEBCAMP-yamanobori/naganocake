<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class = "container">
  <div class = "row">
    <h4 class="mt-3 mb-3 bg-light">会員情報編集</h4>
  </div>
<!--form_with部分-->
<%= form_with model: @customer, url:customers_path, local:true do |f| %>
    <div class = "row">
      <table class="table-borderless-form">
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postcode %></td>
            </tr>
             <tr>
              <td>住所</td>
              <td colspan = "5"><%= f.text_field :address, size:50%></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
              <div class="col-sm-1"></div>
              <td><%= link_to "退会する", unsubscribe_customers_path,class:"btn btn-danger"%></td>
            </tr>
          </div>
      </table>
<% end %>
</div>
