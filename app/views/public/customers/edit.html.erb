<h2>会員情報編集</h2>
<%= form_with model: @customer, url:customers_path, local:true do |f| %>
<!--本来は、@customerのはず-->
  <div class = "form-icon">
    <table>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postcode %></td>
        </tr>
         <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
    </table>
  </div>
  <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
  退会する
<% end %>
