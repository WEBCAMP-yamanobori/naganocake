<div class="container-fluid">
  <div class="row">
    <div class="form-group offset-sm-2">
      <h4 class="mt-3 bg-light">注文履歴詳細</h4>
    </div>
  </div>

  <%= form_with model: [:admin, @order], local:true do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 offset-sm-1">
          <label>購入者</label>
        </div>
        <div class="col-sm-2">
          <%= @order.name %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 offset-sm-1">
          <label>注文日</label>
        </div>
        <div class="col-sm-2">
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 offset-sm-1">
          <label>配送先</label>
        </div>
        <div class="col-sm-8">
          〒<%= @order.postcode %> <%= @order.address %><br>
          <%= @order.name %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 offset-sm-1">
          <label>支払方法</label>
        </div>
        <div class="col-sm-2">
          <% if @order.payment_method == "0" %>
            クレジットカード
          <% elsif %>
            銀行振込
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 offset-sm-1">
          <label>注文ステータス</label>
        </div>
        <div class="col-sm-3">
          <%= f.select :status ,options_for_select([['入金待ち', 0], ['入金確認', 1], ['製作中', 2], ['発送準備中', 3], ['発送中', 4]]) %>
          <%= f.submit "更新", class:'btn btn-success btn-sm bottom_order1' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-8">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="cell_order1">商品名</th>
                <th class="cell_order2">単価(税込)</th>
                <th class="cell_order3">数量</th>
                <th class="cell_order4">小計</th>
                <th class="cell_order5">製作ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @.each do |address| %>
              <tr>
                <td class="cell_order1"><%= address.postcode %></td>
                <td class="cell_order2"><%= address.address %></td>
                <td class="cell_order3"><%= address.name %></td>
                <td class="cell_order4"></td>
                <td class="cell_order5"></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
