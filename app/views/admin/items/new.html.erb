<div class="container">
  <div class="row text-right my-4">
    <div class="col-sm-4">
      <strong>商品新規投稿</strong>
    </div>
  </div>

  <%= form_with model: [:admin, @item], local:true do |f| %>
    <div class="row">
      <div class="col-sm-6 offset-3">
        <table class="table-bordeless">
          <tr class="cell-height">
            <div>
              <td class="cell-width"><%= f.label :商品画像 %></td>
              <td><%= f.attachment_field :image %></td>
            </div>
          </tr>
          <tr class="cell-height">
            <div class="col-sm-2">
              <td class="cell-width"><%= f.label :商品名 %></td>
              <td><%= f.text_field :name, class:"form-control", placeholder: "商品名" %></td>
            </div>
          </tr>
          <tr class="introduction-height">
            <div class="col-sm-2">
              <td class="cell-width"><%= f.label :商品説明 %></td>
              <td><%= f.text_area :ntroduction, class:"form-control", placeholder: "ここに説明文を記述します" %></td>
            </div>
          </tr>
          <tr class="cell-height">
            <div>
              <td class="cell-width"><%= f.label :ジャンル %></td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
            </div>
          </tr>
          <tr class="cell-height">
            <div class="col-sm-2 d-flex flex-row">
              <td class="cell-width"><%= f.label :税抜価格 %></td>
              <td class="price-width"><%= f.text_field :non_taxed_price, class:"form-control", placeholder: "値段" %></td>
            </div>
          </tr>
           <tr class="cell-height">
            <div>
              <td class="cell-width"><%= f.label :販売ステータス %></td>
              <td><%= f.radio_button :is_active, true %>販売中<%= f.radio_button :is_active, false %>販売停止中</td>
            </div>
          </tr>
        </table>
      </div>
    </div>
      <div class="row text-center my-5">
        <div class="col-sm-12">
          <td><%= f.submit "新規登録" ,class: 'btn btn-success col-sm-2' %></td>
        </div>
      </div>
    </div>
  <% end %>
</div>