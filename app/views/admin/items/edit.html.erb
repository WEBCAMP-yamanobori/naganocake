<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row text-right mt-4">
    <div class="col-sm-4">
      <h4>商品編集</h4>
    </div>
  </div>
  
  <%= form_with model: [:admin, @item], local:true do |f| %>
    <div class="row">
      <div class="col-sm-10 offset-2">
        <table class="table-bordeless">
          <tr>
            <div>
              <td><%= f.label :商品画像 %></td>
              <td><%= f.attachment_field :image %></td>
            </div>
          </tr>
          <tr>
            <div class="col-sm-2">
              <td><%= f.label :商品名 %></td>
              <td><%= f.text_field :name, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
          <tr>
            <div class="col-sm-2">
              <td><%= f.label :商品説明 %></td>
              <td><%= f.text_area :ntroduction, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
          <tr> 
            <div>
              <td><%= f.label :ジャンル %></td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
            </div>
          </tr>
          <tr>
            <div class="col-sm-2">
              <td><%= f.label :税抜価格 %></td>
              <td><%= f.text_field :non_taxed_price, class:"form-control", autofocus: true %></td>
            </div>
          </tr>
           <tr>
            <div>
              <td><%= f.label :販売ステータス %></td>
              <td><%= f.radio_button :is_active, true %>販売中<%= f.radio_button :is_active, false %>販売停止中</td>
            </div>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="row text-center my-3">
      <div class="col-sm-12">
        <td><%= f.submit "変更を保存" ,class: 'btn btn-success col-sm-2' %></td>
      </div>
    </div>
  <% end %>
</div>