<div class="container">
  <div class="row text-right my-4">
    <strong class="col-sm-2">商品一覧</strong>
    <div class ="col-sm-10">
      <%= link_to "", new_admin_item_path, class: "fas fa-plus-circle fa-2x" %>
    </div>
  </div>

  <div class="row">
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="align-middle"><%= item.id %></td>
              <td class="align-middle">
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="align-middle"><%= item.non_taxed_price.to_s(:delimited) %></td>
              <td class="align-middle"><%= item.genre.name %></td>
              <td class="align-middle">
                <% if item.is_active == true %>
                <p class="color text-success", style="margin:0">販売中</p>
                <% else %>
                <p class="color text-secondary", style="margin:0">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>