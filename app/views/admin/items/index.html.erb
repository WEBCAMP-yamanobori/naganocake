<div class="container">
  <div class="row text-right my-4">
    <strong class="col-sm-2">商品一覧</strong>
    <div class ="col-sm-10">
      <%= link_to "新規登録", new_admin_item_path %>
    </div>
  </div>
  
  <div class="row">
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
        </thead>
    
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="item"><%= item.id %></td>
              <td class="item">
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="item"><%= item.non_taxed_price.to_s(:delimited) %></td>
              <td class="item"><%= item.genre.name %></td>
              <td >
                <% if item.is_active == true %>
                <p class="color text-success">販売中</p>
                <% else %>
                <p class="color text-secondary">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>