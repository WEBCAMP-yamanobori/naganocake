<div class="container">
  <div class="row text-right my-4">
    <div class="col-sm-2">
      <h4>商品詳細</h4>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-sm-4">
      <div>
        <%= attachment_image_tag @item, :image, :fill, 350, 250, fallback: "22047646_s.jpg", size: "350x250" %>
      </div>
    </div>
  
    <div class="col-sm-9">
      <form>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格(税抜価格)</td>
              <td><%= @item.add_tax_non_taxed_price.to_s(:delimited) %>(<%= @item.non_taxed_price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_active == true %>
                  <p class="color text-success", style="margin:0">販売中</div>
                <% else %>
                  <p class="color text-secondary", style="margin:0">販売停止中</div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-12">
      <div class="text-center">
        <%= link_to "編集", edit_admin_item_path, class:"btn btn-success btn-lg col-2" %>
      </div>
    </div>
  </div>
</div>