<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="form-group">
      <h4 class="mt-3 bg-light">ジャンル一覧・追加</h4>
    </div>
  </div>
<!-- form_with部分 -->
    <div class="form-group">
      <%= form_with model: [:admin, @genre], local:true do |f| %>
      <div class="row">
        <div class="col-sm-1">
          <label>ジャンル名</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :name , class:"form-control genre_name", placeholder: "ジャンル名" %>
        </div>
        <div class="col-sm-3">
          <%= f.submit '新規登録', class:'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>

  <!--<div class="row">-->
    <div class="form-group">
      <div class="col-md-3">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル名</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:'btn btn-success' %></td>
                <!--<td><= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure"%></td>-->
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  <!--</div>-->
</div>