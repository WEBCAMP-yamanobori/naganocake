<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="form-group">
      <h4 class="mt-3 bg-light">ジャンル編集</h4>
    </div>
  </div>
<!-- form_with部分 -->
    <div class="form-group">
      <%= form_with model: [:admin, @genre], local:true do |f| %>
      <div class="row">
        <div class="col-sm-1">
          <label>ジャンル名</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :name , class:"form-control genre_name", placeholder: "ジャンル名" %>
        </div>
        <div class="col-sm-3">
          <%= f.submit '変更を保存', class:'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>
</div>