<div class="container">
  <div class="row text-right my-4">
    <div class="col-sm-2">
      <h4>会員一覧</h4>
    </div>
  </div>
    
  <div class="row mb-4">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <table class="table">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
    
        <tbody>
            <% @customers.each do |customer|%>
            <tr>
                <td><%= customer.id %></td>
                <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.last_name %><%= customer.first_name %>
                    <% end %>
                </td>
                <td><%= customer.email %></td>
                <% if customer.is_delete == false %>
                    <td>有効</td>
                <% else %>
                    <td>退会</td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <%= paginate @customers %>
</div>
