<div class = "container">
  <div class = "row">
    <h4>新規会員登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class = "row">
    <form>
      <table class="table-bordeless">
        <tr>
          <div class="form-row">
              <div class="field">
                <td>名前<%= f.label :（姓） %></td>
                <td><%= f.text_field :last_name, autofocus: true %></td>
              </div>
              <div class="field">
                <td><%= f.label :（姓） %></td>
                <td><%= f.text_field :first_name, autofocus: true %></td>
              </div>
          </div>
        </tr>
        <tr>
            <div class="form-row">
                <div class="field">
                  <td>フリガナ<%= f.label :（セイ）%></td>
                  <td><%= f.text_field :last_name_kana, autofocus: true %></td>
                </div>
                <div class="field">
                  <td><%= f.label :（メイ） %></td>
                  <td><%= f.text_field :first_name_kana, autofocus: true %></td>
                </div>
            </div>
        </tr>
        <tr>
          <div class="form-group">
            <div class="col">
                <div class="field">
                  <td><%= f.label :メールアドレス %></td>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50  %></td>
                </div>
            </div>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :郵便番号 %></td>
            <td><%= f.text_field :postcode, autofocus: true %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address, autofocus: true %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :電話番号 %></td>
            <td><%= f.text_field :phone_number, autofocus: true %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :パスワード %></td>
            <td><% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :パスワード確認用 %><br /></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <div class="actions">
            <td></td>
            <td><%= f.submit "新規登録" ,class: 'btn btn-success' %></td>
          </div>
        </tr>
      </table>
      <div class ="row">
        <h4>既に会員済みの方</4>
        <div class = login-form>
          <p><%= render "devise/shared/links" %>からログインして下さい</p>
        </div>
      </div>
      </form>
    <% end %>
  </div>
</div>